{
  "name": "finance-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:backend": "cd backend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "next build && cd backend && npm run build",
    "start": "next start",
    "start:backend": "cd backend && npm start",
    "start:full": "concurrently \"npm start\" \"npm run start:backend\"",
    "lint": "next lint && cd backend && npm run lint",
    "test": "cd backend && npm test",
    "install:backend": "cd backend && npm install"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.4.6",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "@eslint/eslintrc": "^3",
    "concurrently": "^8.2.2"
  }
}
